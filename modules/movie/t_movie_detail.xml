<div id="movie-detail">
	<p>
		<a href="movie/play/{{fs_filename}}"><img src="img/play.png" alt="Play" /></a>
		<a href="movie/down/{{fs_filename}}"><img src="movie/img/disk.png" alt="Download" /></a>
		<callback ds="_d" name="movie.cb.buttons" />
	</p>

	<input type="hidden" name="movie-bd" value="{{med_bd}}" />
	<input type="hidden" id="movie_path" value="{{fs_path}}" />

	<p>Details for {{fs_path}}</p>

	<item><div>{{name}} {{value}}</div></item>

	<div id="movie-details"></div>
</div>