<div id="movie-detail">
	<div class="movie-buttons"><a
		href="movie/down/{{fs_filename}}"><img src="movie/img/save_as.png"
		alt="Download" /></a><callback ds="_d" name="movie.cb.buttons" /></div>

	<input type="hidden" id="movie-id" value="{{Data._id}}" />
	<input type="hidden" id="movie_path" value="{{Path}}" />
	<input type="hidden" id="movie_title" value="{{Title}}" />
	<input type="hidden" id="movie_released" value="{{Released}}" />

	<div id="movie-details">
		<table>
		<item><tr><td>{{name}}</td><td>{{value}}</td></tr></item>
		</table>
	</div>
</div>
