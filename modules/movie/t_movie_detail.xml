<div id="movie-detail">
	<p><a href="{{fs_path}}" class="search"><img src="img/find.png"
		alt="Find" /></a>
	<a href="{{fs_path}}" class="remove"><img src="img/remove.png"
		alt="Remove" /></a>
	<a href="movie/play/{{fs_filename}}"><img src="img/play.png"
		alt="Play" /></a>
	<a href="movie/vote/up/{{fs_path}}"><img src="img/vote.png"
		alt="Vote" /></a>
	<a href="{{fs_path}}" id="a-movie-cover"><img src="modules/movie/img/covers.png"
		alt="Select New Cover" /></a></p>
	<p>Details for {{fs_path}}</p>

	<input type="hidden" name="movie-bd" value="{{med_bd}}" />

	<item><div>{{name}} {{value}}</div></item>

	<div id="movie-details"></div>
</div>