<div id="detail-wrap">
	<div class="movie-buttons"><a
		href="movie/down/{{fs_filename}}"><img src="movie/img/save_as.png"
		alt="Download" /></a><callback ds="_d" name="cb.detail.buttons" type="movie" /></div>

	<input type="hidden" id="detail-type" value="movie" />
	<input type="hidden" id="detail-id" value="{{Data._id}}" />
	<input type="hidden" id="detail-path" value="{{Path}}" />

	<div id="details">
	<callback ds="_d" name="cb.detail.entry" type="movie">
	<div><a href="{{var}}" class="shower">{{var}}</a></div>
	<div id="{{var}}" style="display: none">{{val}}</div>
	</callback>
	</div>
</div>
