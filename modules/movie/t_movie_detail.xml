<div id="movie-detail">
	<p>
		<a href="movie/down/{{fs_filename}}"><img src="movie/img/disk.png" alt="Download" /></a>
		<callback ds="_d" name="movie.cb.buttons" />
	</p>

	<input type="hidden" id="movie-id" value="{{med_id}}" />
	<input type="hidden" id="movie-bd" value="{{med_bd}}" />
	<input type="hidden" id="movie_path" value="{{fs_path}}" />
	<input type="hidden" id="movie_title" value="{{fs_title}}" />

	<div id="movie-details">
		<table>
		<item><tr><td>{{name}}</td><td>{{value}}</td></tr></item>
		</table>
	</div>
</div>
